<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="BlueBackground">
    	<item name="android:background">#77004773</item>    
    </style>
    
    <style name="Button" parent="@style/SansFont.Small.White">
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:background">#AAE8BD5F</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="SansFont">
        <item name="android:typeface">sans</item>
    </style>
     
     <style name="SansFont.Small">
        <item name="android:textSize">16sp</item>
     </style> 
     
     <style name="SansFont.Medium">
        <item name="android:textSize">20sp</item>
     </style> 
     
     <style name="SansFont.Large">
        <item name="android:textSize">30sp</item>
     </style> 
    
     <style name="SansFont.Small.Gold">
        <item name="android:textColor">#E8BD5F</item>
        <item name="android:textColorHint">#E8BD5F</item>
     </style> 
     
     <style name="SansFont.Small.Hint">
        <item name="android:textColor">#88FFFFFF</item>
        <item name="android:textColorHint">#88FFFFFF</item>
     </style> 
     
     <style name="SansFont.Small.White">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
     </style> 
     
     <style name="SansFont.Medium.White">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
     </style> 
     
     <style name="SansFont.Large.White">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
     </style> 

</resources>
